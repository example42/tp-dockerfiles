# Dockerfile generated by tp::dockerize { 'redis': }
FROM alpine:3.3
MAINTAINER Example42 GmbH <info@example42.com>

RUN echo "http://dl-3.alpinelinux.org/alpine/edge/testing\nhttp://dl-3.alpinelinux.org/alpine/edge/community" >> /etc/apk/repositories
RUN apk --no-cache add redis supervisor
RUN echo "[supervisord]\nnodaemon=true\n\n[program:redis-server]\ncommand=redis-server  /etc/redis/redis.conf " >> /etc/supervisord.conf

EXPOSE 6379


CMD [ "/usr/bin/supervisord" , "-c" , "/etc/supervisord.conf" ]
