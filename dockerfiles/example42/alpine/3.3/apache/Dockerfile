# Dockerfile generated by tp::dockerize { 'apache': }
FROM alpine:3.3
MAINTAINER Example42 GmbH <info@example42.com>

RUN echo "http://dl-3.alpinelinux.org/alpine/edge/testing\nhttp://dl-3.alpinelinux.org/alpine/edge/community" >> /etc/apk/repositories
RUN apk --no-cache add apache2 supervisor
RUN echo "[supervisord]\nnodaemon=true\n\n[program:httpd]\ncommand=httpd   -DFOREGROUND" >> /etc/supervisord.conf

EXPOSE 80
VOLUME /var/www /var/log/apache2 

CMD [ "/usr/bin/supervisord" , "-c" , "/etc/supervisord.conf" ]
