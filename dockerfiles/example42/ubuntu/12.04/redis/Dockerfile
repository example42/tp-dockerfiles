# Dockerfile generated by tp::dockerize { 'redis': }
FROM ubuntu:12.04
MAINTAINER Example42 GmbH <info@example42.com>

RUN apt-get update && \
    apt-get install -y --no-install-recommends redis-server && \
    apt-get install -y --no-install-recommends supervisor && \
    rm -rf /var/lib/apt/lists/*
RUN echo "[supervisord]\nnodaemon=true\n\n[program:redis-server]\ncommand=redis-server  /etc/redis/redis.conf " >> /etc/supervisor/conf.d/redis.conf

EXPOSE 6379


CMD [ "/usr/bin/supervisord" , "-c" , "/etc/supervisor/supervisord.conf" ]
