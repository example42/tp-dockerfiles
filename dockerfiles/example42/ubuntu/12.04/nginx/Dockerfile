# Dockerfile generated by tp::dockerize { 'nginx': }
FROM ubuntu:12.04
MAINTAINER Example42 GmbH <info@example42.com>

RUN apt-get update && \
    apt-get install -y --no-install-recommends nginx && \
    apt-get install -y --no-install-recommends supervisor && \
    rm -rf /var/lib/apt/lists/*
RUN echo "[supervisord]\nnodaemon=true\n\n[program:nginx]\ncommand=nginx   -g 'daemon off;'" >> /etc/supervisor/conf.d/nginx.conf

EXPOSE 80
VOLUME /usr/share/nginx/html
VOLUME /var/log/nginx


CMD [ "/usr/bin/supervisord" , "-c" , "/etc/supervisor/supervisord.conf" ]
