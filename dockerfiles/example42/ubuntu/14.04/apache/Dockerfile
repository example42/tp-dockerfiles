# Dockerfile generated by tp::dockerize { 'apache': }
FROM ubuntu:14.04
MAINTAINER Example42 GmbH <info@example42.com>

RUN apt-get update && \
    apt-get install -y --no-install-recommends apache2 && \
    apt-get install -y --no-install-recommends supervisor && \
    rm -rf /var/lib/apt/lists/*
RUN echo "[supervisord]\nnodaemon=true\n\n[program:apache2]\ncommand=apache2   -DFOREGROUND" >> /etc/supervisor/conf.d/apache.conf

EXPOSE 80
VOLUME /var/www /var/log/apache2 

CMD [ "/usr/bin/supervisord" , "-c" , "/etc/supervisor/supervisord.conf" ]
