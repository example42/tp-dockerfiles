# Dockerfile generated by tp::dockerize { 'memcached': }
FROM ubuntu:14.04
MAINTAINER Example42 GmbH <info@example42.com>

RUN apt-get update && \
    apt-get install -y --no-install-recommends memcached && \
    apt-get install -y --no-install-recommends supervisor && \
    rm -rf /var/lib/apt/lists/*
RUN echo "[supervisord]\nnodaemon=true\n\n[program:memcached]\ncommand=memcached   " >> /etc/supervisor/conf.d/memcached.conf

EXPOSE 11211
VOLUME  /var/log/memcached 

CMD [ "/usr/bin/supervisord" , "-c" , "/etc/supervisor/supervisord.conf" ]
