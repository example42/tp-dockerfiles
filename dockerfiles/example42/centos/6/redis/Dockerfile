# Dockerfile generated by tp::dockerize { 'redis': }
FROM centos:6
MAINTAINER Example42 GmbH <info@example42.com>

RUN yum install -y epel-release
RUN yum install -y redis supervisor && yum clean all
RUN echo "[supervisord]\nnodaemon=true\n\n[program:redis-server]\ncommand=redis-server  /etc/redis.conf --daemonize no " >> /etc/supervisord.conf

EXPOSE 6379


CMD [ "/usr/bin/supervisord" , "-c" , "/etc/supervisord.conf" ]
